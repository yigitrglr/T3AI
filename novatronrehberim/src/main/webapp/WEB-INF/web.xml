<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_9" version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="https://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>Novatron Rehberim</display-name>
	
	<servlet>
		<servlet-name>HomeController</servlet-name>
		<servlet-class>com.novatronrehberim.controllers.HomeController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AlphabetController</servlet-name>
		<servlet-class>com.novatronrehberim.controllers.AlphabetController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>MathController</servlet-name>
		<servlet-class>com.novatronrehberim.controllers.MathController</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>JobsController</servlet-name>
		<servlet-class>com.novatronrehberim.controllers.JobsController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>HomeController</servlet-name>
		<url-pattern>/home</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AlphabetController</servlet-name>
		<url-pattern>/alphabet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>MathController</servlet-name>
		<url-pattern>/math</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>JobsController</servlet-name>
		<url-pattern>/jobs</url-pattern>
	</servlet-mapping>
	
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<page-encoding>UTF-8</page-encoding>
		</jsp-property-group>
	</jsp-config>

</web-app>